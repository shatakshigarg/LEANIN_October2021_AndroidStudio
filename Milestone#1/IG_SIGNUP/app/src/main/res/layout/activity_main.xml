<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/ig_gradient"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/igicon"
        android:tint="#fff"
        android:layout_marginTop="50dp"
        android:id="@+id/image"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/image"
        android:text="Instagram"
        android:id="@+id/text"
        android:fontFamily="@font/grandista"
        android:textSize="35sp"
        android:textAlignment="center"
        android:textColor="#fff"
        />
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#79C5C3C3"
        android:padding="12dp"
        android:layout_marginTop="50dp"
        android:hint="Username"
        android:fontFamily="@font/helvetica_neue"
        android:textColor="#fff"
        android:textColorHint="#B9FFFFFF"
        android:id="@+id/username"
        />
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/username"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#79C5C3C3"
        android:padding="12dp"
        android:layout_marginTop="15dp"
        android:hint="Password"
        android:fontFamily="@font/helvetica_neue"
        android:textColor="#fff"
        android:textColorHint="#B9FFFFFF"
        android:id="@+id/password"
        />
    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/password"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:text="Sign up"
        android:id="@+id/btn"
        android:textAlignment="center"
        android:textColor="#B9FFFFFF"
        android:textSize="15sp"
        android:padding="12dp"
        android:background="@drawable/signup_bg"
        android:fontFamily="@font/helvetica_neue"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/btn"
        android:layout_marginTop="20dp"
        android:text="@string/phone"
        android:id="@+id/phone"
        android:textSize="10sp"
        android:textAlignment="center"
        android:textColor="#fff"
        android:fontFamily="@font/helvetica_neue"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/layout"
        android:text="Sign up with Facebook"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:drawableLeft="@drawable/fb_icon"
        android:drawablePadding="5dp"
        android:textSize="12sp"
        android:textColor="#fff"
        android:drawableTint="#fff"
        app:flow_horizontalAlign="center"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:id="@+id/fb_icon"
        android:fontFamily="@font/helvetica_neue"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/fb_icon"
        android:text="Sign up with Google"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:drawableLeft="@drawable/google_icon"
        android:drawablePadding="5dp"
        android:textSize="12sp"
        android:textColor="#fff"
        android:drawableTint="#fff"
        app:flow_horizontalAlign="center"
        android:textAlignment="textStart"
        android:layout_marginTop="5dp"
        android:id="@+id/google_icon"
        android:fontFamily="@font/helvetica_neue"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Already have an Account? Log in."
        android:textAlignment="center"
        android:layout_marginBottom="20dp"
        android:textSize="14sp"
        android:fontFamily="@font/helvetica_neue"
        android:textColor="#fff"
        />

<RelativeLayout

        android:layout_width="300dp"
        app:layout_constraintTop_toBottomOf="@+id/phone"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/layout"
        >
        <View
            android:layout_width="130dp"
            android:layout_height="0.1dp"
            android:id="@+id/view1"
            android:layout_marginTop="10dp"
            android:background="#fff"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:text="OR"
            android:fontFamily="@font/helvetica_neue"
            android:textColor="#fff"
            android:textSize="15sp"
            />

        <View
            android:layout_width="130dp"
            android:layout_height="0.1dp"
            android:layout_marginTop="10dp"
            android:id="@+id/view2"
            android:background="#fff"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>